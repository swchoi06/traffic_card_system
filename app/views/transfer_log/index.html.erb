<link rel="style" type="text/css" href="style.css"/>

<div class="title">
	<h1 class="Title"> Transfer Log </h1>
	<%= link_to 'Statistic', transfer_logs_statistic_path %>
</div>
<table class="table table-striped">
<div id=transfersubject">
<tr>
		<th>Card ID</th>
		<th>Transfer Time</th>
		<th>Transfer From</th>
		<th>Transfer To </th>
		<th>Discounted Cost</th>
	</tr>
</div>
<div id=transfercontents>
<% @transfer_logs.each do |log| %>
	<% @transferFrom = TransLog.find(log.transferFrom) %>
	<% @transferTo = TransLog.find(log.transferTo) %>
	<tr>
		<td><%= log.cardID %></td>
		<td><%= @transferTo.boardingTime %></td>
		<td><%= @transferFrom.busRouteNm %></td>
		<td><%= @transferTo.busRouteNm %></td>
		<td><%= @transferTo.discountedCost %></td>
	</tr>
</div>
<% end %>
</table>

<br />


